.catalent
  .main-content
    position relative
    -moz-transition left ease-in-out .5s
    -webkit-transition left ease-in-out .5s
    -o-transition left ease-in-out .5s
    -ms-transition left ease-in-out .5s
    transition left ease-in-out .5s
    width 100%

.homepage
  background-color $col-white
  position relative
  left 0
  top 0
  height 546px
  overflow hidden
  +small()
    z-index 1
    top 46px
    height auto
    overflow-y scroll
  
  .dot-group
    position absolute
    left 0
    bottom 0
    text-align center
    width 100%
    display none
    +small()
      display block
    .dot
      display inline-block
      height 10px
      width 10px
      margin 0 5px
      background url(../img/dot.png)
    .dot.active
      background url(../img/dot-active.png)
    
  .top-carousel
    position relative
    top 0
    left 0
    width 300%
    
  .btn-position
    width 100%
    max-width 960px
    margin 0 auto
    position relative
    height 0
    +small()
      display none
    
    .btn-prev
      position absolute
      top 0
      left 0
      width 30px
      z-index 2
      cursor pointer
      background url(../img/nav-prev.png) center center no-repeat
      height 556px
      bottom -556px
      
    .btn-next
      position absolute
      top 0
      right 0
      width 30px
      z-index 2
      cursor pointer
      background url(../img/nav-next .png) center center no-repeat
      height 556px
      bottom -556px
    
  .slice
    float left
    width 33.33%
    padding-top 10px
    
    &__content
      width 100%
      max-width 960px
      margin 0 auto
    
    &__top
      height 384px
      +small()
        height auto
      
      &--left
        float left
        max-width 480px
        padding-left 50px
        height 100%
        +small()
          float none
          margin 0 auto
          padding-left 0
          text-align center
        
        .kit-middle
          display table
          height 100%
          +small()
            display inline-block
            padding 20px 40px 50px
            height auto
          
          .kit-middle-content
            display table-cell
            vertical-align middle
            height 100%
      
        h1
          color $col-aa-blue
          font-size 2em
          font-weight 300
          line-height 1.5em
          margin-bottom 20px
        
        h2
          color $col-white
          font-size 2em
          font-weight 300
          line-height 1.5em
          margin-bottom 20px
          
        p 
          display block
          color $col-white
          
          a
            color $col-white
            padding-top 20px
            padding-right 40px
            background url(../img/bottom-link-white.png) right 16px no-repeat
            display inline-block
          
          span
            height 27px
            line-height 27px
            padding-right 37px
            display inline-block
            color $col-aa-blue
            font-weight 400
            margin-top 20px
            font-size 1.25em
            text-decoration none
            cursor pointer
            background url(../img/bottom-link-white.png) right center no-repeat

      &--right
        float right
        max-width 480px
        padding-right 50px
        height 384px
        +small()
          height 200px
          float none
          text-align center
          padding-right 0
        
        img
          height 100%
          +small()
            max-width 100%
            float none
          
    &__bottom
      max-width 774px
      margin 0 auto
      text-align center
      +small()
        max-width 100%
        width 100%
      
      h2
        color $col-white
        font-family Whitney Bold
        padding-bottom 22px
        font-size 13px
        line-height 22px
        text-transform uppercase
        +small()
          padding-bottom 6px
      
      .slice-title
        color #0f6bab
      
      .slice-buttons
        padding-bottom 40px

      .slice-buttons:after
        content " "
        display block
        clear both
        
      .slice-button
        float left
        height 68px
        padding 0 27px
        margin 0 10px
        display table
        text-transform uppercase
        background #93d7d5
        border-bottom 3px #27afac solid
        +small()
          float none
          margin 0
          text-align center
          height 37px
          display block
        
        a
          color #076462
          display table-cell
          vertical-align middle
          cursor pointer
          text-decoration none
          +small()
            display block
          
        &--content-text
          width 129px
          font-size 12px
          line-height 16px
          display table-cell
          vertical-align middle
          font-family Whitney Medium
          text-align center
          +small()
            width 100%
            line-height 37px
            display block
          
        &--content-icon
          width 40px
          height 44px
          display table-cell
          vertical-align middle
          padding-left 15px
          +small()
            display none
          
          img
            height 100%
            
      .green-bg
        background #93d7d5
        border-bottom 3px #27afac solid
        
      .purple-bg
        background #c3c1dc
        border-bottom 3px #6a64a7 solid
        a 
          color #6a64a7
        
      .blue-bg
        background #a3c2e0
        border-bottom 3px #0f6bab solid
        a
          color #084e7f
      
          
  .first
    background #c6dce9 url(../img/slide-bg.png) center center no-repeat
    
  .second
    background #0068a8   
      
  .tired
    background #0068a8  
  
