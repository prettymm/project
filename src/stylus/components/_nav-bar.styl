.navbar
  background-color #f6f6f6
  height 148px
  border-bottom solid 1px #e0e0e0
  position relative
  .kit-content-default
    width 100%
    max-width 960px
    margin 0 auto
    position relative
    left 0
    top 0
    
    .top-nav-links-block
      float right
      margin-top 15px
      margin-right 20px
      display inline-block
      height 27px
      line-height 27px
      
      .main-nav-links
        float left
        display inline-block
        
        a.sub-link
          float left
          line-height 27px
          height 27px
          display inline-block
          font-size .825em
          font-weight 400
          font-style normal
          cursor pointer
          color #000
          text-decoration none
        a:hover
          text-decoration underline
          
        .separator
          display inline-block
          float left
          width 20px
          height 20px
          background url(../img/nav-separator.png) center 7px no-repeat
          
      a.language-global
        background url(../img/global.png) left 3px no-repeat
        padding 2px 10px 5px 30px
        float right
        height 27px
        line-height 27px
        min-width 36px
        display inline-block
        color #0068A8
        text-decoration none
        margin-left 20px
        font-size 13px
        
      form
        position relative
        margin-left 8px
        display inline-block
        float right
        width 158px
        height 27px
        line-height 27px
        background-color transparent
        font-size .825em
        border 1px solid #b3b3be
        min-width 158px
        
        input
          position absolute
          left 0
          display inline-block
          border none
          height 25px
          line-height 25px
          background-color transparent
          outline 0
          padding 0 30px 0 5px
          color #000
          width 100%
          
        button
          position absolute
          height 25px
          width 25px
          right 0
          z-index 1
          outline 0
          border none
          background url(../img/nav-search.png) right center no-repeat
      
      .language-div
        border 1px solid #b3b3b3
        background #F6F6F6
        padding 30px 15px 25px 30px
        position absolute
        top 54px
        right 10px
        font-size 11px
        line-height 13px
        z-index 1
        min-width 210px
        display none
        
        .lang-title
          font-size 14px
          font-weight 400
          color #000
          font-family "Whitney SSm A", sans-serif
          line-height 13px
          
        .lang-close
          background url(../img/close.png) no-repeat
          height 14px
          width 14px
          display block
          float right
          margin-right 5px
          cursor pointer
          
        .language-global
          background url(../img/global.png) left 5px no-repeat
          padding 8px 10px 5px 30px
          height 27px
          line-height 17px
          color #0069aa
          margin 14px 0 22px
          text-transform uppercase
          
          a 
            color #0069aa
            text-decoration none
            
          a:hover 
            text-decoration underline
          
        .regional-sites
          padding-bottom 17px
          font-weight 400
          
        ul
          width 279px
          li
            list-style none
            padding 0 0 13px
            
            a
              text-decoration none
              color #000!important
              padding-left 0!important
              padding-right 0!important
              height auto!important
              line-height 13px!important
              display list-item
              
            a.f-l-w-50
              float left
              width 50%
            
            a.f-l-w-33
              float left
              width 33%
              
            a:hover
              color #0056a6
              text-decoration underline
              
          li:after
            content " "
            clear both
            display block
          
    a.logo
      display inline-block
      float left
      margin-left 20px
      padding-top 25px
      cursor pointer
      
    .links-container
      display inline-block
      position relative
      left 0
      bottom 0
      text-align center
      width 100%
      
      .nav-menu
        width 12.5%
        padding 15px 0
        display inline-block
        float left
        position relative
        
        a
          padding 0
          width 100%
          text-align left
          text-transform uppercase
          display inline-block
          font-size .825em
          font-weight 400
          font-style normal
          text-decoration none
          float left
          color #000
        
        a:hover
          font-weight 700
          color #0056a6
          text-decoration underline
          
        .drop-down
          width 190px
          padding 15px 10px
          position absolute
          left -10px
          top 40px
          border 1px #e8e8e8 solid
          background #fff
          display none
          
          a
            width 100%
            text-align left
            text-transform uppercase
            font-size .825em
            font-weight 400
            line-height 24px
            
        .arrow-down
          width 14px
          height 30px
          background url(../img/drop-down-arrow-down.jpg) left center no-repeat
          position absolute
          right 35px
          top 9px
          display inline-block
          z-index 10
          cursor pointer
          
        
      





















































      